@model List<BibliotecaMVC.Core.Entities.Libro>


<table class="table">
    <thead>
        <tr>
            <th><a asp-controller="Libro" asp-action="Index" asp-route-criterio="Titulo">Titulo</a></th>
            <th><a asp-controller="Libro" asp-action="Index" asp-route-criterio="Autor"> Autor</a></th>
            <th><a asp-controller="Libro" asp-action="Index" asp-route-criterio="AnioPunlicacion"> Año Publicación </a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var libro in Model)
{
            <tr>
                <td>@libro.Titulo</td>
                <td>@libro.Autor</td>
                <td>@libro.AnioPunlicacion</td>
                <td><a asp controller="Libro" asp-action="Edit" asp-route-id="@libro.Id" type="button" class="btn btn-outline-primary btn-sm">Editar</a></td>
                <td><a asp controller="Libro" asp-action="Delete" asp-route-id="@libro.Id" type="button" class="btn btn-outline-primary btn-sm">Eliminar</a></td>
            </tr>

}
    <tbody>
</table>
